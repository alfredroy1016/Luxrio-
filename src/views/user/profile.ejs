<%- include("../partials/user/header") %>
<style>
 /* Main color scheme adjustments */
.card-green {
  background-color: #B8E2F2; /* Lighter blue to match the mockup */
}

.main {
  padding: 30px 0;
  background-color: #F4F0F3; /* Light background color from mockup */
}

/* Dashboard menu styling to match mockup */
.dashboard-menu {
  background-color: #D6EEF2; /* Lighter blue for menu background */
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.dashboard-menu .nav-link {
  font-weight: bold;
  color: #4A6A5A; /* Darker green color for menu items */
  margin-bottom: 10px;
  padding: 10px 15px;
  border-radius: 6px;
  transition: all 0.3s ease;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.dashboard-menu .nav-link:hover, 
.dashboard-menu .nav-link.active {
  color: #2E4E41;
  background-color: #CCE8EC; /* Slightly darker than menu background */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

/* Card styling to match mockup */
.card {
  border-radius: 10px;
  border: none;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
  margin-bottom: 20px;
  overflow: hidden;
}

.card-header {
  background-color: #4A6E78; /* Teal-gray color from mockup */
  color: white;
  border-radius: 10px 10px 0 0 !important;
  padding: 15px 20px;
}

/* User profile card specific styling */
#dashboard .card-body {
  background-color: #B8E2F2; /* Light blue background */
  padding: 30px 20px;
}

/* Button styling */
.btn-success, .btn-primary {
  background-color: #4A6E78; /* Teal-gray from mockup */
  border-color: #4A6E78;
  border-radius: 5px;
  padding: 8px 16px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-success:hover, .btn-primary:hover {
  background-color: #38565E;
  border-color: #38565E;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
}

/* Breadcrumb styling */
.page-header.breadcrumb-wrap {
  background-color: #EEE2E9; /* Light pink/lavender from mockup */
  padding: 15px 0;
  margin-bottom: 20px;
}

.breadcrumb {
  display: flex;
  align-items: center;
  font-family: 'Arial', sans-serif;
  font-size: 16px;
  color: #121311;
}

.breadcrumb a {
  color: #007bff;
  text-decoration: none;
}

/* Additional styles for layout improvements */
.tab-content {
  background-color: transparent;
}

/* Header styling */
.text-center {
  font-weight: 600;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .dashboard-menu {
    margin-bottom: 20px;
  }
  
  .card {
    margin-bottom: 15px;
  }
}
</style>


<main class="main">
 <div class="page-header breadcrumb-wrap mb-3">
   <div class="container">
     <div class="breadcrumb">
       <a href="#" rel="nofollow">Home</a>
       <span></span> Profile <span></span> Account
     </div>
   </div>
 </div>
  <section class="pt-10 pb-10">
   <div class="container">
     <div class="row">
       <div class="col-lg-10 m-auto">
         <div class="row">
           <div class="col-md-4">
             <div class="dashboard-menu">
               <ul class="nav flex-column" role="tablist">
                 <li class="nav-item">
                   <a class="nav-link active" id="dashboard-tab" data-bs-toggle="tab" href="#dashboard" role="tab" aria-controls="dashboard" aria-selected="false">
                     <i class="fi-rs-settings-sliders mr-10"></i>Dashboard
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" id="address-tab" data-bs-toggle="tab" href="#address" role="tab" aria-controls="address" aria-selected="true">
                     <i class="fi-rs-marker mr-10"></i>My Address
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" id="orders-tab" data-bs-toggle="tab" href="#orders" role="tab" aria-controls="orders" aria-selected="false">
                     <i class="fi-rs-shopping-bag mr-10"></i>Orders
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#track-orders" role="tab" aria-controls="track-orders" aria-selected="false">
                     <i class="fi-rs-shopping-cart-check mr-10"></i>Wallet Status
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#wallet-history" role="tab" aria-controls="track-orders" aria-selected="false">
                     <i class="fi-rs-shopping-cart-check mr-10"></i>Wallet History
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" id="track-orders-tab" data-bs-toggle="tab" href="#referal" role="tab" aria-controls="track-orders" aria-selected="false">
                     <i class="fi-rs-shopping-cart-check mr-10"></i>Referals
                   </a>
                 </li>
                 <li class="nav-item">
                   <a class="nav-link" href="/logout">
                     <i class="fi-rs-sign-out mr-10"></i>Logout
                   </a>
                 </li>
               </ul>
             </div>
           </div>
           <div class="col-md-8">
             <div class="tab-content dashboard-content">


               <div class="tab-pane fade show active" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
                 <div class="card card-green">
                   <div class="card-header">
                     <h5 class="mb-0 text-center">User Profile</h5>
                   </div>
                   <div class="card-body text-center">
                     <h5 class="card-title"></h5>
                     <p class="card-text">
                        <strong>Phone:</strong> <%= user.phone ? user.phone : 'Not Provided' %>
                      </p>
                      <p class="card-text">
